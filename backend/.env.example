MONGO_URI=mongodb://localhost:27017/geotacops
JWT_ACCESS_SECRET=change_me
JWT_REFRESH_SECRET=change_me
PORT=4000

# OIDC / Keycloak (BFF)
# Public realm issuer URL, e.g. "https://keycloak.example.com/realms/neogi"
OIDC_ISSUER_URL=

# OIDC client configured in Keycloak (Confidential client)
OIDC_CLIENT_ID=bff-backend
OIDC_CLIENT_SECRET=

# External URLs used for redirects
# FRONTEND_BASE_URL should point to the React app (e.g. http://localhost:5173)
# BACKEND_BASE_URL should point to this Fastify server as seen by the browser (e.g. http://localhost:4000 or https://api.example.com)
FRONTEND_BASE_URL=
BACKEND_BASE_URL=

# Secret used to sign the BFF session cookies (random long string)
BFF_SESSION_SECRET=change_me_session_secret
